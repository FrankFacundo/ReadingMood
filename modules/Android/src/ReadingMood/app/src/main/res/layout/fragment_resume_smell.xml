<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pop_up_play_resume_smell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cyan"
    android:configChanges="keyboardHidden|orientation"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cyan"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:orientation="vertical">


            <TextView
                android:id="@+id/current_atmosphere_played_media_resume_smell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/title_style_main"
                android:text="Current Ambiance"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/image_current_atmosphere_resume_smell"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:maxWidth="100dp"
                android:maxHeight="100dp"
                app:srcCompat="@drawable/logo_reading_mood"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/shuffle_resume_smell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round"
                    app:srcCompat="@drawable/shuffle"
                    tools:ignore="VectorDrawableCompat" />

                <ImageButton
                    android:id="@+id/play_previous_resume_smell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/round"
                    app:srcCompat="@drawable/skip_previous"
                    tools:ignore="VectorDrawableCompat" />

                <ImageButton
                    android:id="@+id/play_manual_resume_smell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    app:srcCompat="@drawable/play_button_atmosphere"
                    tools:ignore="VectorDrawableCompat" />

                <ImageButton
                    android:id="@+id/skip_next_resume_smell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/round"
                    app:srcCompat="@drawable/skip_next"
                    tools:ignore="VectorDrawableCompat" />

                <ImageButton
                    android:id="@+id/repeat_resume_smell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0"
                    android:background="@drawable/round"
                    app:srcCompat="@drawable/repeat_selected"
                    tools:ignore="VectorDrawableCompat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal">


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
